@model List<CheeseMVC.Models.Menu>

<h1>@ViewBag.Title</h1>

@if (Model.Count == 0)
{
    <p>No Menus yet!</p>
}

<table class="table">

    <tr>
        <th>Name</th>
        <th>ID</th>
    </tr>

    @foreach (var menu in Model)
    {
        <tr>
            <td><a href="/Menu/ViewMenu/@menu.ID">@menu.Name</a></td>
            <td>@menu.ID</td>
        </tr>
    }
</table>

<p><a asp-controller="Menu" asp-action="Add">Add Menus</a></p>